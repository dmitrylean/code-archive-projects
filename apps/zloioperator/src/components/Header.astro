<style>
	svg {
		color: black;
	}
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 40px;
  }

  .logo {
    display: flex;
    flex-direction: row;
    gap: 10px;
  }

  .logo a {
    color: black;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.5rem;
  }

  .nav {
    display: flex;
    gap: 20px;
    align-items: center;
    justify-content: space-between;
  }

  .navbar {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 20px;
  }

  .nav a {
    margin: 0 15px;
    text-decoration: none;
    color: black;
  }

  /* Burger */

  .burger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 5px;
  }

  .burger span {
    width: 25px;
    height: 3px;
    background: white;
    border-radius: 2px;
  }

  .burger,
  .close {
