---
import type { CollectionEntry } from "astro:content";

type Work = CollectionEntry<"works">;

interface Props {
  works: Work[];
}

const { works } = Astro.props as Props;
---

<section class="work-section">
  <h2 class="work-title">Works</h2>

  <div class="work-list">
    {
      works
        .sort((a, b) => b.data.year - a.data.year)
        .map((work) => {
          const { title, description, image, year, category } = work.data;
          return (
            <article class="work-item">
              <div class="work-image">
                <img src={image} alt={title} />
              </div>
              <div class="work-content">
                <h3 class="work-heading">
                  <a href={`/works/${work.slug}`}>{title}</a>
                </h3>
                <div class="work-meta">
                  <span class="work-year">{year}</span>
                  <span class="work-category">{category}</span>
                </div>
                <p class="work-description">{description}</p>
              </div>
            </article>
          );
        })
    }
  </div>
</section>

<style>
  .work-section {
    max-width: 960px;
    margin: 3rem auto;
    padding: 0 1rem;
  }

  .work-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
  }

  .work-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .work-item {
    display: flex;
    gap: 1rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid #ddd;
  }

  .work-image {
    flex-shrink: 0;
    width: 246px;
    height: 180px;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .work-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .work-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .work-heading {
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
  }

  .work-heading a {
    text-decoration: none;
    color: black;
  }

  .work-heading a:hover {
    color: blue;
  }

  .work-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #666;
    margin-top: 0.25rem;
  }

  .work-year {
    background-color: #1e3a8a;
    color: white;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 1.25rem;
  }

  .work-category {
    font-size: 1.25rem;
  }

  .work-description {
    margin-top: 0.5rem;
    color: #444;
    line-height: 1.4;
    font-size: 1rem;
  }

  /* === Responsive === */

  @media (max-width: 1024px) {
  .work-item {
    gap: 0.75rem;
  }

  .work-heading {
    font-size: 1.5rem;
  }

  .work-year,
  .work-category {
    font-size: 1rem;
  }

  .work-description {
    font-size: 0.9rem;
  }

  .work-image {
    width: 200px;
    height: 150px;
  }
}

@media (max-width: 768px) {
  .work-item {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .work-image {
    width: 100%;
    max-width: 400px;
    height: auto;
  }

  .work-content {
    align-items: center;
  }

  .work-heading {
    font-size: 1.25rem;
  }

  .work-description {
    font-size: 0.875rem;
  }

  .work-meta {
    justify-content: center;
    flex-wrap: wrap;
  }
  }
</style>
