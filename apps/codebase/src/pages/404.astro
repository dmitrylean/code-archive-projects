---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="content">
    <div class="error-section">
      <div class="container">
        <div class="text">
          <h1>404</h1>
        </div>
        <div class="error_info">
          <div class="err_row">
            <span class="value">Page Not Found</span>
          </div>
        </div>
        <a href="/" class="btn-submit"> На главную </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1440px;
    margin-left: auto;
    margin-right: auto;
    height: 100%;
  }
  .text h1 {
    font-size: 72px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 30px;
  }

  .error-section {
    justify-content: center;
    text-align: center;
    height: 50%;
  }

  .text p {
    font-size: 65px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 35px;
  }

  .error_info {
    margin: 20px;
    font-family: sans-serif;
    font-size: 34px;
    gap: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 40px;
    text-align: center;
  }

  .err_row {
    font-size: 34px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 10px;
    gap: 10px;
  }

  .label {
    font-weight: bold;
    width: 140px;
  }

  .value {
    color: #333;
  }

  .btn-submit {
    margin-top: 20px;
    padding: 12px 20px;
    border: none;
    border-radius: 25px;
    background: #2e8791;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: 0.3s;
    text-decoration: none;
  }

  .btn-submit:hover {
    opacity: 0.8;
    color: black;
    background: white;
  }
</style>
