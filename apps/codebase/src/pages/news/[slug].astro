---
import { getCollection, getEntryBySlug } from "astro:content";
import Layout from "../../layouts/Layout.astro";
// import CategoriesNews from "../../components/CategoriesNews.astro";

export async function getStaticPaths() {
  const posts = await getCollection("news");
  return posts.map((news) => ({
    params: { slug: news.slug },
    props: { news },
  }));
}

const { news } = Astro.props;

const { Content } = await news.render();
---

<Layout>
  <!--<CategoriesNews /> -->
  <article class="blog-post">
    <div class="container">
      <h1>{news.data.title}</h1>
      <p class="post-meta">
        {
          news.data.pubDate
            ? news.data.pubDate.toLocaleDateString("ru-RU", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            : ""
        }
        {news.data.category && ` | ${news.data.category}`}
      </p>

      <div class="post-body">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  /* === BLOG POST STYLES === */

  .blog-post {
    max-width: 1440px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: "Inter", sans-serif;
    color: #111;
    line-height: 1.7;
    background: #fff;
  }

  /* Category label */
  .post-meta {
    display: inline-block;
    font-size: 14px;
    font-weight: 600;
    background: #e5f0ff;
    color: #2563eb;
    padding: 4px 12px;
    border-radius: 999px;
    margin-bottom: 20px;
  }

  /* Title */
  .blog-post h1 {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 15px;
    color: #111;
  }

  /* Meta info */
  .post-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 14px;
    color: #666;
    margin-bottom: 25px;
  }

  .post-meta img {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    object-fit: cover;
  }

  /* Featured image */
  .post-image {
    width: 100%;
    border-radius: 12px;
    margin-bottom: 25px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    display: block;
    border-radius: 12px;
  }

  /* Content */
  .post-body p {
    margin-bottom: 18px;
    font-size: 16px;
    color: #333;
  }

  .blog-post h2,
  .blog-post h3 {
    font-weight: 600;
    margin: 30px 0 15px;
    color: #111;
  }

  .blog-post h2 {
    font-size: 22px;
  }

  .blog-post h3 {
    font-size: 18px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-post h1 {
      font-size: 24px;
    }
    .blog-post p {
      font-size: 15px;
    }
  }

  @media (max-width: 500px) {
    .blog-post .container {
      padding: 20px 15px;
    }
    .blog-post h1 {
      font-size: 20px;
    }
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
    }
  }
</style>
