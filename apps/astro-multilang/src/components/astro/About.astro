interface Props {
  imageSrc: string;
  imageAlt: string;
  title: string;
  subtitle: string;
  paragraphs: string[];
  contactLink: ContactLink;
  projectLink: ProjectLink;
  // musicLink: MusicLink;
}

const {
  imageSrc,
  imageAlt,
  title,
  subtitle,
  paragraphs,
  contactLink,
  projectLink,
  // musicLink,
} = Astro.props as Props;
