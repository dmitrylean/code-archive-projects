<section class="hero">
  <div class="hero-content">
    <h1>{title}</h1>
    <h2>
      {subtitle}
    </h2>

    <div class="btn-grid">
      {paragraphs.map((text) => <p>{text}</p>)}
      <a href={contactLink.href} class="contact-btn">{contactLink.text}</a>
      <a href={projectLink.href} class="projects-btn">{projectLink.text}</a>
      <!-- <a href={musicLink.href} class="music-btn">{musicLink.text}</a> -->
    </div>
  </div>

  <div class="hero-image">
    <img src={imageSrc} alt={imageAlt} />
  </div>
</section>

<style>
  /* ===== HERO ===== */
  .hero {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    max-width: 1100px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .hero-content {
    flex: 1;
  }

  .hero-content h1 {
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .hero-content p {
    font-size: 1rem;
    color: #555;
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .btn-grid {
    flex: 1;
    gap: 40px;
  }

  .contact-btn {
    display: inline-block;
    padding: 12px 24px;
    background: #ff5a5f;
    color: #fff;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.3s ease;
  }

  .projects-btn,
  .music-btn {
    display: none;
    padding: 12px 24px;
    background: #ff5a5f;
    color: #fff;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.3s ease;
  }

  .contact-btn:hover,
  .projects-btn:hover {
    background: white;
    color: black;
    border: 2px black;
  }

  .hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .hero-image img {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    object-fit: cover;
    border: 6px solid #f4f9ff;
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      text-align: center;
    }

    .hero-content {
      order: 2;
    }

    .hero-image {
      order: 1;
      margin-bottom: 20px;
    }

    .btn-grid {
      display: flex;
      flex-direction: column;
      gap: 10px;
      flex: 1;
      width: auto;
    }

    .projects-btn,
    .music-btn {
      display: inline-block;
    }
  }
</style>
