---
import Layout from "../../layouts/Layout.astro";
import lang from "../../data/lang.json";

const currentLang = "ru";

const locale = currentLang;
const t = lang[locale];
---

<Layout title="404 | Dmitry Lean">
  <main class="content">
    <div class="error-section">
      <div class="container">
        <div class="text">
          <h1>404</h1>
        </div>
        <div class="error_info">
          <div class="err_row">
            <span class="value">Page Not Found</span>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1440px;
    margin-left: auto;
    margin-right: auto;
    height: 100%;
  }
  .text h1 {
    font-size: 72px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 30px;
  }

  .error-section {
    justify-content: center;
    text-align: center;
    height: 50%;
  }

  .text p {
    font-size: 65px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 35px;
  }

  .error_info {
    margin: 20px;
    font-family: sans-serif;
    font-size: 34px;
    gap: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 40px;
    text-align: center;
  }

  .err_row {
    font-size: 34px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 10px;
    gap: 10px;
  }

  .label {
    font-weight: bold;
    width: 140px;
  }

  .value {
    color: #333;
  }
</style>
